---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="grid place-content-center p-20">
		<div class="container">
			<slot />
		</div>
	</body>
</html>

<style>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color: #fff;
	}
</style>
